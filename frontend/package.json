{
	"name": "@merkle/frontend-task",
	"version": "0.1.0",
	"description": "Suitsupply headless commerce",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "next build",
		"dev": "next dev --port 3002",
		"lint": "pnpm lint:tsc",
		"lint:eslint": "../../node_modules/eslint/bin/eslint.js --fix --cache --cache-location .eslintcache --no-error-on-unmatched-pattern .",
		"lint:style": "stylelint --allow-empty-input '**/*.{css,scss}'",
		"lint:tsc": "tsc -p . --noEmit",
		"start": "next start",
		"test": "vitest run --passWithNoTests --coverage",
		"update-packages": "pnpx npm-check-updates -u && pnpm i",
		"vercel:env": "pnpm vercel env pull",
		"vercel:link": "pnpm vercel link --yes --cwd . --scope suitsupply-team --project monorepo-application-template"
	},
	"dependencies": {
		"classnames": "^2.5.1",
		"next": "14.2.3",
		"react": "18.3.1",
		"react-dom": "18.3.1"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.1.0",
		"@testing-library/react": "^16.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "20.14.2",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@vercel/edge-config": "^1.1.1",
		"@vitejs/plugin-react": "^4.3.0",
		"@vitest/coverage-v8": "^1.6.0",
		"@vitest/ui": "^1.6.0",
		"jsdom": "^24.1.0",
		"sass": "^1.77.4",
		"stylelint": "^16.6.1",
		"stylelint-config-css-modules": "^4.4.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"typescript": "5.4.5",
		"vitest": "^1.6.0"
	}
}
